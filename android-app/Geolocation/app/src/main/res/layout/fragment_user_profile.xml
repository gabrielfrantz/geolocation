<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="Editar Perfil"
    android:tooltipText="Editar Perfil"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:shape="ring"
        app:cardCornerRadius="65dp">

        <ImageView
            android:id="@+id/profile_user_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/image_user_information"
            android:shape="ring"
            app:srcCompat="@drawable/icon_user_default" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/frame_item_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_label_profile_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Nome: "
                    android:textColor="@color/colorGrayLight"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/my_border"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_item_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="E-mail: "
                    android:textColor="@color/colorGrayLight"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/my_border"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_item_nascimento_genero"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nascimento"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Nascimento: "
                    android:textColor="@color/colorGrayLight"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_nascimento"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/my_border"
                    android:ems="10" />

                <TextView
                    android:id="@+id/tv_genero"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="GÃªnero: "
                    android:textColor="@color/colorGrayLight"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_genero"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/my_border"
                    android:ems="10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_item_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Senha: "
                    android:textColor="@color/colorGrayLight"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/my_border"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_item_biografia"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_biografia"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Biografia: "
                    android:textColor="@color/colorGrayLight"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_biografia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/my_border"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_item_altura"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_altura"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Altura (cm): "
                    android:textColor="@color/colorGrayLight"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_altura"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/my_border"
                    android:ems="10" />

                <TextView
                    android:id="@+id/tv_peso"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Peso (kg): "
                    android:textColor="@color/colorGrayLight"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_peso"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/my_border"
                    android:ems="10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_item_imc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_imc"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="IMC: "
                    android:textColor="@color/colorGrayLight"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_imc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/my_border"
                    android:ems="10" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_imc"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/customize_buttom"
                android:inputType="textCapSentences"
                android:text="Ver tabela do IMC"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/frame_item_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_label_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:text="Tornar esse perfil pÃºblico: "
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <Switch
                    android:id="@+id/sw_compartilhar_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:checked="true"
                    android:thumbTint="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_label_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:text="Tornar as informaÃ§Ãµes pÃºblicas: "
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <Switch
                    android:id="@+id/sw_compartilhar_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumbTint="@color/colorPrimary" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>

